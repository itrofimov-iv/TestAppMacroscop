<Window x:Class="TestAppMacroscop.View.TestApp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestAppMacroscop.View"
        mc:Ignorable="d"
        Title="TestApp" Height="600" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Image Grid.Column="0" Name="video" HorizontalAlignment="Left" Height="480" Margin="10" Width="640"/>
        <ListView Grid.Column="1" Name="lvCams" Margin="10" SelectionChanged="lvCams_SelectionChanged"></ListView>
    </Grid>
</Window>
